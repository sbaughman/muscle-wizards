<div class="row">
  <div class="medium-8 medium-centered column">
    <h2>Sign up</h2>
    <p id="coach-note">
      Note: Coach accounts have all the privileges of Athlete accounts.  You do not need to also have an Athlete account for full functionality.
    </p>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, required: true, autofocus: true %>
        <%= f.input :email, required: true %>
        <%= f.input :phone_number, placeholder: "optional" %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
        <%= f.input :avatar, as: :file, label: "Avatar Photo (optional)" %>
        <%= f.hidden_field :coach, value: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up" %>
      </div>

    <% end %>
  </div>
</div>
