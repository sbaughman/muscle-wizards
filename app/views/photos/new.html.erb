<div class="row">
  <div class="medium-8 medium-centered column">
    <h2>Upload new Progress Pic:</h2>
    <%= simple_form_for [@prep, @photo] do |f| %>
      <%= f.input :image, as: :file %>
      <%= f.input :tag, collection: @tags, label: 'Select Pose (optional)' %>
      <%= f.button :submit %>
    <% end %>
    <%= link_to "Back to Photos", prep_photos_path(@prep) %>
    <%= link_to "Back to Prep", @prep %>
  </div>
</div>
