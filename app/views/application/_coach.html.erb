<div class="backgrnd">
  <% if @prep.coach_id.nil? && @prep.invitation.nil? %>
    <h4>Coach</h4>
    <ul class="no-bullet no-data">
      <h5>Get started here!</h5>
      <li><%= link_to "Find a Coach", coaches_path(@prep) %></li>
      <li><%= link_to "Coach Myself", selfie_path(@prep) %></li>
    </ul>
  <% elsif @prep.coach_id.nil? && @prep.invitation %>
    <h4>Coach</h4>
    <ul class="no-bullet no-data">
      <li><h5>You have a pending coach request.</h5></li>
      <li><%= link_to "Delete Coach Request", deny_invite_path(@prep, @prep.invitation.user), method: :delete %></li>
    </ul>
  <% elsif @prep.coach_id != @prep.athlete.id %>
    <h4>Coach</h4>
    <%= link_to user_path(@coach) do %>
      <%= image_tag(@coach.avatar(:medium), class: "prep-avatar") %>
      <h6><%= @coach.name %></h6>
    <% end %>
  <% else %>
    <h4>Quote of the Day</h4>
    <h5 class="no-data">
      "I don't do this to be healthy, I do this to get big muscles."
    </h5>
  <% end %>
</div>
