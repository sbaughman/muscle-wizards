  <% certs.each do |cert| %>
    <ul class="no-bullet certification">
      <li>Title: <%= cert.name %><li>
      <li>Certified On: <%= cert.date_granted.strftime('%D') %></li>
    </ul>
    <%= link_to "Edit", edit_user_certification_path(user_id: current_user.id, id: cert) if @user == current_user %>
    <%= link_to "Delete", user_certification_path(user_id: current_user.id, id: cert), method: :delete if @user == current_user %>

  <% end %>
