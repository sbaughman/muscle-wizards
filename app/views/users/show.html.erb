<div class="row">
  <div class="medium-4 columns">
    <h4>Your Account</h4>
    <div id="user-info">
      <%= image_tag(@user.avatar(:medium)) %>
      <ul class="no-bullet">
        <li>Name: <%= @user.name %></li>
        <li>Email: <%= @user.email %></li>
        <li>Gender: <%= @user.gender %></li>
        <li>Age: <%= @user.age %></li>
        <li>Bio: <%= @user.bio %></li>
        <li>Height: <%= @user.height %></li>
      </ul>
      <%= link_to "Edit Your Profile", edit_user_path(@user), class: "expanded button" if @user == current_user %>
    </div>
  </div>
  <div class="medium-8 columns">
    <% if @user == current_user %>
      <h2>Preps:</h2>
      <% @user.preps.each do |prep| %>
        <ul class="no-bullet">
          <li><%= render partial: 'preps/prep', locals: { prep: prep } %></li>
        </ul>
      <% end %>
      <%= link_to "Add another prep", new_prep_path %>
      <% if @user.preps.empty? %>
        <h5>You don't have any preps started yet.  <%= link_to "Start one now!", new_prep_path %></h5>
      <% end %>
    <% else %>
      <%= render partial: "user_about" %>
    <% end %>
  </div>
</div>
